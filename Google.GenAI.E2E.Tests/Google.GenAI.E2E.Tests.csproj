<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../ReleaseVersion.xml" />
  <PropertyGroup>
    <TargetFrameworks>net6.0;net8.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <warningLevel>1</warningLevel>
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="coverlet.collector">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="MimeTypes">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="TestServerSdk" />
    <ProjectReference Include="..\Google.GenAI\Google.GenAI.csproj" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="MSTest.TestFramework" />
    <PackageReference Include="MSTest.TestAdapter" />
    <PackageReference Include="Moq" />
    <PackageReference Include="Microsoft.Testing.Extensions.CodeCoverage" />
  </ItemGroup>

  <!-- Add None ItemGroup to make sure files are tracked by MSBuild -->
  <ItemGroup>
    <None Include="Recordings/**/*">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Include="Live/*.pcm">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="CopyTestServerFile" AfterTargets="Build">
    <Copy SourceFiles="test-server.yml" DestinationFolder="$(OutputPath)/../" />
  </Target>
  <!-- Updated Target to copy Recordings to bin/Recordings so it's accessible from net6.0 and net8.0 subdirectories -->
  <Target Name="CopyRecordingsToOutput" AfterTargets="Build">
    <ItemGroup>
      <RecordingFiles Include="Recordings/**/*" />
      <TestAssetFiles Include="TestAssets/**/*" />
    </ItemGroup>
    <Copy SourceFiles="@(RecordingFiles)" DestinationFolder="$(OutputPath)/../../Recordings/%(RecursiveDir)" />
    <Copy SourceFiles="@(TestAssetFiles)" DestinationFolder="$(OutputPath)/TestAssets/%(RecursiveDir)" />
  </Target>
  <Target Name="CopyRecordings" AfterTargets="VSTest">
    <ItemGroup>
      <RecordingFiles Include="$(OutputPath)/../../Recordings/**/*.json" />
      <RecordingFiles Include="$(OutputPath)/../../Recordings/**/*.websocket.log" />
    </ItemGroup>
    <Copy SourceFiles="@(RecordingFiles)" DestinationFolder="$(MSBuildProjectDirectory)/Recordings" />
  </Target>

</Project>
